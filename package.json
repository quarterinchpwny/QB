{
  "name": "qb",
  "module": "server/index.ts",
  "type": "module",
  "scripts": {
    "start": "bun server/index.ts",
    "dev": "bun --watch server/index.ts",
    "frontend": "bun run --cwd ./frontend dev -- --port=7331",
    "build": "bun run --cwd ./frontend build",
    "migrate-remote": "bun migrate.ts",
    "db:generate": "bunx drizzle-kit generate",
    "db:push": "bunx drizzle-kit push",
    "db:studio": "bunx drizzle-kit studio",
    "db:seed": "bun run server/db/seed/index.ts"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "drizzle-kit": "^0.31.6"
  },
  "peerDependencies": {
    "typescript": "^5.0.0"
  },
  "dependencies": {
    "@hono/zod-validator": "^0.4.1",
    "drizzle-orm": "^0.43.1",
    "drizzle-seed": "^0.3.1",
    "drizzle-zod": "^0.7.1",
    "hono": "^4.6.8",
    "postgres": "^3.4.5",
    "zod": "^3.23.8"
  }
}
